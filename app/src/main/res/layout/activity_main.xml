<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgron"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Your Tickets!"
        android:layout_marginTop="60dp"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:shadowRadius="15"
        android:shadowDy="3"
        android:shadowColor="#7dd3fc"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/destination"
        android:layout_below="@id/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        />

    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_below="@id/destination"
        android:layout_marginTop="2dp"
        android:layout_marginStart="60dp"
        android:elevation="4dp"
        android:background="@color/black"
        />

    <TextView
        android:id="@+id/airline"
        android:layout_below="@id/book"
        android:layout_toRightOf="@id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airline"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        />

<!--    <Button-->
<!--        android:id="@+id/back_btn"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/to_spin"-->
